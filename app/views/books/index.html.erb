<h1>Bookers</h1>
<% @books.each do |book| %>
 <span>
  <%= link_to "Show", book_path(book.id) %>
  <%= link_to "Edit", edit_book_path(book.id) %>


 </span>
<% end %>

<h2>New book</h2>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

  <h4>Tilte</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create book' %>

<% end %>
