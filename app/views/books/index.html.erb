<h1>Books</h1>
<% @books.each do |book| %>
  <table>
    <thead>
      <tr>
        <th>Tilte</th>
        <th>Body</th>
        <th colspan = "3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= book.title %></td>
         <td><%= link_to "Show", book_path(book.id) %></td>
         <td><%= link_to "Edit", edit_book_path(book.id) %></td>
         <td> <%= link_to "Destroy", book_path(@books), method: :delete %></td>
      </tr>
    </tbody>
  </table>
<% end %>


<h2>New book</h2>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

  <h4>Tilte</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create book' %>

<% end %>
